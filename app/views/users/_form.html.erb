<% if current_user%>
  <section>
    <h2>Add a comment:</h2>
    <%= form_for([@user, @review]) do |f| %>
      <p>
        <%= f.label :reviewer_name %><br>
        <%= f.text_field :reviewer_name %>
      </p>
      <p>
        <%= f.label :content %><br>
        <%= f.text_area :content %>
      </p>
      <p>
        <%= f.label :rating %><br>
        <%= f.select :rating, options_for_select(1..5), { prompt: "Select..." } %>
      </p>
      <p>
        <%= f.submit %>
      </p>
    <% end %>
  </section>
<% end %>