<% if current_user && current_user.id != @user.id %>
  <section class="review-form">
      <h5>Add Review for <%= @user.name %>:</h5>
      <div class="review-form-container">
        <%= form_for([@user, @review]) do |f| %>
          <div class="form-group">
            <%= f.label :content %><br>
            <%= f.text_area :content, class: 'textarea' %>
          </div>
          <div class="form-group">
            <%= f.label :rating %><br>
            <span class="select">
              <%= f.select :rating, options_for_select(1..5), { prompt: "Select..." } %>
            </span>
          </div>
          <div class="form-group">
            <%= f.submit "Create a Review", class: "button is-success" %>
          </div>
        <% end %>
      </div>
  </section>
<% end %>
