<% if current_user && current_user.id != @user.id %>
  <section class="review-form">
      <h2>Add Review for <%= @user.name %>:</h2>
      <%= form_for([@user, @review]) do |f| %>
        <p>
          <%= f.label :content %><br>
          <%= f.text_area :content, class: 'textarea' %>
        </p>
        <p>
          <%= f.label :rating %><br>
          <span class="select">
            <%= f.select :rating, options_for_select(1..5), { prompt: "Select..." } %>
          </span>
        </p>
        <p>
          <%= f.submit "Create a Review", class: "button is-success" %>
        </p>
      <% end %>
  </section>
<% end %>
