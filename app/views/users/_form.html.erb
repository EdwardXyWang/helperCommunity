<% if current_user && current_user.id != @user.id %>
  <section class="review-form">
      <h2>Add Review for this Member:</h2>
      <%= form_for([@user, @review]) do |f| %>
        <p>
          <%= f.label :content %><br>
          <%= f.text_area :content %>
        </p>
        <p>
          <%= f.label :rating %><br>
          <%= f.select :rating, options_for_select(1..5), { prompt: "Select..." } %>
        </p>
        <p>
          <%= f.submit %>
        </p>
      <% end %>
  </section>
<% end %>
