<section class="user-info">
  <h1>Host Info</h1>
  <p>
    <strong>Name:</strong>
    <%= @event.user.name %>
  </p>
  <p>
    <strong>Karma Member Since:</strong>
    <%= @event.user.created_at.strftime("%d %b. %Y") %>
  </p>
  <p>
    <strong>About <%= @event.user.name %>:</strong>
    <%= @event.user.description %>
  </p>
</section>
<section class="event-info">
  <h1>Event Info</h1>
  <p>
    <strong>Title:</strong>
    <%= @event.title %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= @event.description %>
  </p>
  <p>
    <strong>Date:</strong>
    <%= @event.scheduled_at.strftime("%d %b. %Y") %>
  </p>
  <p>
    <strong>Time:</strong>
    <%= @event.scheduled_at.strftime("%H:%M") %>
    <%= @event.scheduled_at.strftime("%I:%M %P") %>
  </p>
  <p>
    <strong>Destination:</strong>
    <%= @event.address %>
  </p>
  <p>
    <strong>Post Created By:</strong>
    <%= @event.created_at.strftime("%d %b. %Y") %>
  </p>
</section>







